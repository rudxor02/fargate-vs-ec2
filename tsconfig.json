{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true
        // "noUnusedLocals": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
